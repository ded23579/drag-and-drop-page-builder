{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php",
      "config": {
        "composer": {
          "version": "latest"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ],
  "buildCommand": "bash build.sh",
  "installCommand": "composer install && npm install",
  "outputDirectory": "."
}